generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  BUSINESS_OWNER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum BusinessStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PlanStatus {
  DRAFT
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum DiscountType {
  NONE
  PERCENTAGE
  AMOUNT
}

enum SubscriptionInterval {
  DAY
  WEEK
  MONTH
  YEAR
  CUSTOM
}

enum SubscriptionStatus {
  PENDING
  ACTIVE
  CANCELLED
  EXPIRED
  FAILED
}

enum AdvertisementType {
  CATEGORY
  TOP
  FOOTER
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  phone         String      @unique
  password      String
  firstName     String
  lastName      String
  role          UserRole    @default(USER)
  status        UserStatus  @default(ACTIVE)
  avatar        String?
  emailVerified Boolean     @default(false)
  phoneVerified Boolean     @default(false)
  
  notifications Notification[]
  businesses    Business[]
  reviews       Review[]
  favourites    Favourite[]
  payments      Payment[]
  blogs         Blog[]
  createdSubscriptionPlans SubscriptionPlan[]
  createdSubscriptions     BusinessSubscription[]
  createdAdvertisements Advertisement[]
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  @@index([email])
  @@index([phone])
}

model Category {
  id          String     @id @default(cuid())
  name        String     @unique
  slug        String     @unique
  description String?
  icon        String?
  image       String?
  order       Int        @default(0)
  
  parentId    String?
  parent      Category?  @relation("CategorySubcategories", fields: [parentId], references: [id], onDelete: Cascade)
  subcategories Category[] @relation("CategorySubcategories")
  
  businesses  Business[]
  advertisements Advertisement[]
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([slug])
  @@index([parentId])
}

model Region {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  countryId String
  country   Country  @relation(fields: [countryId], references: [id], onDelete: Cascade)

  cities    City[]
  advertisements Advertisement[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([slug])
  @@index([countryId])
}

model City {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  
  regionId  String
  region    Region   @relation(fields: [regionId], references: [id], onDelete: Cascade)
  
  businesses Business[]
  advertisements Advertisement[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([slug])
  @@index([regionId])
}

model Country {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  code      String?  @unique

  regions   Region[]
  advertisements Advertisement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([code])
}

model Business {
  id              String         @id @default(cuid())
  name            String
  slug            String         @unique
  description     String?        @db.LongText
  email           String
  phone           String
  whatsapp        String?
  website         String?
  address         String
  latitude        Float?
  longitude       Float?
  crNumber        String?
  crVerified      Boolean        @default(false)
  images          Json?
  logo            String?
  logoAlt         String?
  coverImage      String?
  coverImageAlt   String?
  metaTitle       String?
  metaDescription String?
  keywords        Json?
  status          BusinessStatus @default(PENDING)
  averageRating   Float          @default(0)
  totalReviews    Int            @default(0)
  workingHours    Json?
  isVerified      Boolean        @default(false)
  currentSubscriptionId String?  @unique
  subscriptionStartedAt DateTime?
  subscriptionExpiresAt DateTime?
  canCreateAdvertisements Boolean @default(false)
  promotedUntil DateTime?
  
  userId          String
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  categoryId      String
  category        Category       @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  
  cityId          String
  city            City           @relation(fields: [cityId], references: [id], onDelete: Restrict)
  
  views           BusinessView[]
  services        Service[]
  reviews         Review[]
  favourites      Favourite[]
  payments        Payment[]
  subscriptions   BusinessSubscription[] @relation("BusinessSubscriptions")
  currentSubscription BusinessSubscription? @relation("BusinessCurrentSubscription", fields: [currentSubscriptionId], references: [id])
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  @@index([slug])
  @@index([userId])
  @@index([categoryId])
  @@index([cityId])
  @@index([status])
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.LongText
  price       Float
  duration    Int?
  image       String?
  youtubeUrl  String?
  
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([businessId])
}

model Review {
  id                 String   @id @default(cuid())
  rating             Int
  comment            String?  @db.LongText
  deleteRequestStatus String?  // PENDING, APPROVED, REJECTED, null
  
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@unique([userId, businessId])
  @@index([businessId])
  @@index([userId])
  @@index([deleteRequestStatus])
}

model Favourite {
  id         String   @id @default(cuid())
  
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  createdAt  DateTime @default(now())
  
  @@unique([userId, businessId])
  @@index([userId])
  @@index([businessId])
}

model Payment {
  id            String        @id @default(cuid())
  amount        Float
  currency      String        @default("SAR")
  status        PaymentStatus @default(PENDING)
  paymentMethod String?
  transactionId String?       @unique
  description   String?
  
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  businessId    String
  business      Business      @relation(fields: [businessId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  @@index([userId])
  @@index([businessId])
  @@index([status])
}

model Blog {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  content         String   @db.LongText
  image           String?
  metaTitle       String?
  metaDescription String?
  tags            Json?
  published       Boolean  @default(false)
  
  authorId        String
  author          User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  categories      BlogCategory[] @relation("BlogCategories")
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([slug])
  @@index([authorId])
  @@index([published])
}

model BlogCategory {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?

  blogs       Blog[]   @relation("BlogCategories")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([name])
}

model BusinessView {
  id         String   @id @default(cuid())
  businessId String
  business   Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  ipAddress  String?
  viewedAt   DateTime @default(now())
  
  @@index([businessId, viewedAt])
  @@index([ipAddress, businessId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type      String   // 'BUSINESS_APPROVED', 'BUSINESS_VERIFIED', 'NEW_REVIEW', 'BUSINESS_REJECTED'
  title     String
  message   String   @db.Text
  link      String?  // Optional link to redirect
  
  isRead    Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
}

model SiteSettings {
  id               String   @id @default(cuid())
  key              String   @unique
  hero             Json?
  navbar           Json?
  featuredSections Json?
  reviews          Json?
  downloadBanner   Json?
  footer           Json?
  about            Json?
  contact          Json?
  currency         String?  @default("SAR")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Advertisement {
  id          String           @id @default(cuid())
  title       String
  imageUrl    String
  targetUrl   String?
  adType      AdvertisementType @default(CATEGORY)
  isActive    Boolean          @default(true)
  startsAt    DateTime?
  endsAt      DateTime?
  notes       String?

  countryId   String?
  country     Country?  @relation(fields: [countryId], references: [id], onDelete: SetNull)

  regionId    String?
  region      Region?   @relation(fields: [regionId], references: [id], onDelete: SetNull)

  cityId      String?
  city        City?     @relation(fields: [cityId], references: [id], onDelete: SetNull)

  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  createdById String?
  createdBy   User?     @relation(fields: [createdById], references: [id], onDelete: SetNull)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([cityId, categoryId])
  @@index([regionId, categoryId])
  @@index([adType])
  @@index([countryId, categoryId])
  @@index([isActive, startsAt, endsAt])
}

model SubscriptionPlan {
  id                     String   @id @default(cuid())
  name                   String
  slug                   String   @unique
  description            String?  @db.Text
  price                  Decimal  @db.Decimal(10, 2)
  salePrice              Decimal? @db.Decimal(10, 2)
  currency               String   @default("SAR")
  status                 PlanStatus @default(ACTIVE)
  billingInterval        SubscriptionInterval @default(MONTH)
  intervalCount          Int      @default(1)
  customIntervalDays     Int?
  verifiedBadge          Boolean  @default(false)
  topPlacement           Boolean  @default(false)
  allowAdvertisements    Boolean  @default(false)
  maxAdvertisements      Int?
  couponCode             String?
  couponType             DiscountType @default(NONE)
  couponValue            Decimal? @db.Decimal(10, 2)
  couponMaxDiscount      Decimal? @db.Decimal(10, 2)
  couponStartsAt         DateTime?
  couponEndsAt           DateTime?
  couponUsageLimit       Int?
  notes                  String?  @db.Text
  metadata               Json?
  createdById            String?
  createdBy              User?    @relation(fields: [createdById], references: [id], onDelete: SetNull)
  subscriptions          BusinessSubscription[]
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@index([status])
  @@index([billingInterval, intervalCount])
}

model BusinessSubscription {
  id               String   @id @default(cuid())
  businessId       String
  planId           String
  status           SubscriptionStatus @default(PENDING)
  startedAt        DateTime @default(now())
  endsAt           DateTime
  cancelledAt      DateTime?
  price            Decimal? @db.Decimal(10, 2)
  discountAmount   Decimal? @db.Decimal(10, 2)
  totalAmount      Decimal? @db.Decimal(10, 2)
  paymentReference String?
  paymentProvider  String?
  notes            String?  @db.Text
  metadata         Json?
  business         Business @relation("BusinessSubscriptions", fields: [businessId], references: [id])
  plan             SubscriptionPlan @relation(fields: [planId], references: [id])
  currentForBusiness Business? @relation("BusinessCurrentSubscription")
  createdById      String?
  createdBy        User?    @relation(fields: [createdById], references: [id], onDelete: SetNull)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([businessId, status])
  @@index([planId, status])
  @@index([status, endsAt])
}